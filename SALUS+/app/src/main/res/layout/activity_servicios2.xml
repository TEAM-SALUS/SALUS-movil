<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4283D9FE"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="418dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Envianos tu mensaje" />

        <ImageButton
            android:id="@+id/turno_wpp"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Contactanos por wpp"
            android:src="@drawable/wpp" />

        <!-- <ImageButton
                android:id="@+id/turno_wpp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/wpp" />
                -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#4B0D0D"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/images" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Servicios"
            android:textSize="22dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>